<div class="form">
  <h1>Paste a link to a spotify playlist</h1>

  <%= form_tag(action: 'create') do %>
    <%= text_field_tag "playlist_uri" %>
    <%= submit_tag (value = "Start game"), class: "submit-button" %>
  <% end %>
</div>

<div class="spinner">
  <div class="rect1"></div>
  <div class="rect2"></div>
  <div class="rect3"></div>
  <div class="rect4"></div>
  <div class="rect5"></div>
</div>
